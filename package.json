{
  "name": "@book000/node-utils",
  "version": "1.0.0",
  "description": "Self-Utility library",
  "homepage": "https://github.com/book000/node-utils",
  "bugs": {
    "url": "https://github.com/book000/node-utils/issues"
  },
  "license": "MIT",
  "author": "Tomachi <tomachi@tomacheese.com>",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:book000/node-utils.git"
  },
  "scripts": {
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "compile": "tsc -p tsconfig.build.json",
    "ctix": "ctix single -w --noBackup -o src -s false",
    "build": "run-s clean ctix compile",
    "prepublishOnly": "run-s lint",
    "prepare": "run-s build",
    "clean": "rimraf dist output",
    "example": "tsx ./src/examples/main.ts",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "fix:prettier": "prettier --write src",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "fix": "run-z fix:prettier,fix:eslint",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "test": "jest --runInBand --passWithNoTests --detectOpenHandles --forceExit --coverage"
  },
  "dependencies": {
    "axios": "1.9.0",
    "cycle": "1.0.3",
    "form-data": "4.0.3",
    "jsonc-parser": "3.3.1",
    "moment-timezone": "0.6.0",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.9.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.29",
    "ctix": "2.7.1",
    "cycle": "1.0.3",
    "eslint": "9.28.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.19.0",
    "eslint-plugin-promise": "7.2.1",
    "jest": "29.7.0",
    "jest-expect-message": "1.1.3",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "run-z": "2.1.0",
    "ts-jest": "29.3.4",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "yarn-run-all": "3.1.1"
  },
  "packageManager": "pnpm@10.11.1",
  "jest": {
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/examples/**",
      "!src/index.ts"
    ]
  }
}
